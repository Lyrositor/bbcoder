{
  "manifest_version": 2,

  "name": "bbcoder for RPNation",
  "description": "Extension for RPNation which creates a bridge between your browser and bbcoder.",
  "version": "0.1",
  "icons": { "512": "images/bbcoder.png" },
  "permissions": [
    "activeTab",
    "https://www.rpnation.com/",
    "https://www.lyros.net/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.rpnation.com/forums/*",
        "https://www.rpnation.com/threads/*",
        "https://www.rpnation.com/posts/*",
        "https://www.rpnation.com/conversations/*"
      ],
      "css": ["lib/codemirror.css"],
      "js": ["lib/codemirror.js", "lib/closetag.js", "lib/css.js", "lib/multiplex.js", "lib/xml.js", "reply.js"]
    }
  ]
}
